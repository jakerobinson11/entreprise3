{% extends 'base.html.twig' %}

{% block title %}Liste des Employés{% endblock %}
{% block body %}
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Prenom</th>
      <th scope="col">Entreprise</th>
      <th scope="col">Salaire</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  {% for employe in mpls %}
    <tr class="table-active">
      <td>{{employe.nom}}</td>
      <td>{{employe.prenom}}</td>
      <td>{{employe.service}}</td>
      <td>{{employe.salaire}}</td>
      <td><a href="{{path('edit_employe',{'id':employe.id})}}">Modifier l'employés</a></td>
      <td><a href="{{path('remove_employe',{'id':employe.id})}}">Supprimer l'employés</a></td>
    </tr>
{% endfor %}

{% endblock %}
